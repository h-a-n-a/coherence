  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "lib"
  },
  "exclude": ["node_modules", "**/__test__"],
  "include": ["src"]
}
